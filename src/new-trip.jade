doctype html
html(lang="en")
  
    include partials/head
  body
    include partials/header
    .container
      .row
        .col-md-4.col-md-offset-4
          form#create-trip
            .form-group
                label(for='from') From
                |     
                input#from.form-control(type='text', placeholder='From')
                |   
              .form-group
                label(for='to') To
                |     
                input#to.form-control(type='text', placeholder='To')
                | 
              .form-group
                label(for='time') Time
                |     
                input#time.form-control(type='text', placeholder='Time')
                | 
              button.btn.btn-primary(type='submit') Save

    include partials/footer


